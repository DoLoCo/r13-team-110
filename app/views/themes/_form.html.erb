<%= simple_form_for @theme, html: { class: 'form-horizontal' id: 'theme-form' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :description, input_html: { class: 'span8', rows: 10 } %>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end -%>