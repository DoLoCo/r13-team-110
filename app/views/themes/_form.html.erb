<%= simple_form_for @theme, html: { class: 'form-horizontal', id: 'theme-form' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, input_html: { class: 'span8' } %>
  <%= f.input :description, input_html: { class: 'span8', rows: 10 } %>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '/themes', class: 'btn btn-link', data: { confirm: 'Are you sure you want to cancel?' } %>
  </div>
<% end -%>